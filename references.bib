pages = {103622},
year = {2024},
issn = {2214-6296},
doi = {https://doi.org/10.1016/j.erss.2024.103622},
url = {https://www.sciencedirect.com/science/article/pii/S2214629624002135},
author = {Alireza Ermagun and Joshua Tian},
keywords = {Electric vehicle, Spatial disparities, EV access, EV infrastructure, Social inequity, Disadvantaged communities},
abstract = {This study assesses the spatial disparity of public electric vehicle (EV) charging infrastructure in the United States. The analysis identifies areas characterized by deficient EV charging station availability and examines the socioeconomic, demographic, and built environment determinants of EV charging station deployment. Exploring the socioeconomic and demographic correlates of charging station spatial disparity, it is discerned that (i) areas with a higher share of racial minorities are less likely to have access to charging stations; (ii) affluent areas are more likely to have access to a charging station; and (iii) there is an inverse relationship between age and access to EV charging stations. Exploring the built environment correlates of charging station spatial disparity, it is noticed that (i) the West region of America is disproportionately home to better access to charging stations and has a higher charging station density; (ii) the presence of charging stations is less likely in census tracts with a higher population density; (iii) areas historically underinvested in, with energy burdens, and with transit barriers are less likely to have a charging station; and (iv) red states have a lower chance of charging station presence compared to blue states. The findings highlight the need to address disparities, but the choice to take action remains a policy decision on every level that requires the cooperation of federal, state, and local agencies.}
}
@article{Bhatt_2024,
doi = {10.1088/2516-1083/ad4b8f},
url = {https://dx.doi.org/10.1088/2516-1083/ad4b8f},
year = {2024},
month = {may},
publisher = {IOP Publishing},
volume = {6},
number = {3},
pages = {033006},
author = {Bhatt, Rudri and Giang, Amanda and Javed, Bassam and Kandlikar, Milind},
title = {Equitable charging infrastructure for electric vehicles: access and experience},
journal = {Progress in Energy},
abstract = {The shift toward electric vehicles (EVs) as a decarbonisation strategy in transportation raises important energy justice concerns, particularly regarding fair access to charging infrastructure. This perspective synthesizes evidence on how access to, and experience of, charging infrastructure may differ across socio-economic groups across North America. We present a framework for assessing charging infrastructure equity that includes: (i) accessibility—proximity, reliability, visibility, affordability; and (ii) user experiences—safety, payment ease, and co-located other services. The framework helps characterize the varied impacts across socio-demographic groups, including on low-income and marginalized communities. We explore how the direct and indirect effects of accessibility and user experience might influence the distribution and design of EV charging stations. Considerations of socio-economic diversity in the deployment of charging infrastructure are critical to ensure equitable benefits from electric mobility. We conclude that targeted actions from manufacturers, charging operators, and governments are needed to alleviate the disparities in access and experiences with public EV charging.}
}
@article{KEUCHEL2024255,
