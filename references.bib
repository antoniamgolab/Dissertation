author = {Deb, Sanchari and Tammi, Kari and Kalita, Karuna and Mahanta, Pinakeswar},
title = {Review of recent trends in charging infrastructure planning for electric vehicles},
journal = {WIREs Energy and Environment},
volume = {7},
