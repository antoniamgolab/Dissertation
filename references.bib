keywords = {Climate policy,Efficiency trade-offs,Electric cars,Electric kick scooters,Electric light commercial vehicles,Electric motorcycles,Electric three- and four-wheelers,Electric trucks,Electric vehicles,Sustainable road transport,Urban mobility,e-bikes,e-boards},
